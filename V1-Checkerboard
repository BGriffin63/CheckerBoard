function setup() {
  createCanvas(400, 400);
  noStroke();
}

function draw() {
  background(220);

  for (let col = 0; col < 10; col++) {
    for (let row = 0; row < 10; row++) {

      if (col % 2 == 0 & row % 2 == 1 || col % 2 == 1 & row % 2 == 0) {
        fill('Red');
      } else {
        fill('Black');
      }
      rect(col * width / 10, row * height / 10, width / 10, height / 10);
    }
  }
}
